<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MainActivityTheme" parent="@android:style/Theme.NoTitleBar" />

    <style name="ProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
         <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.1</item>
    </style>
    
    <!-- spinner -->
    <style name="spinner_diseaseTimeType">
	    <item name="android:background">@drawable/spinner_bg</item>
    </style>

    <style name="v3_table_name_text">
        <item name="android:minWidth">80dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="v3_diagnose_tab_name_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="v3_diagnose_content_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="v3_number_name_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="v3_number_unit_name_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="v3_nutrient_button" >
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="v3_nutrient_label" >
        <item name="android:minWidth">40dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/v3_content</item>
    </style>
    
    <style name="v3_label_base" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/v3_label</item>
    </style>
    
    <style name="v3_label"  parent="@style/v3_label_base">
        <item name="android:minWidth">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    
    <style name="v3_encyclopedia_level2label" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">14sp</item>

    </style>
    <style name="v3_encyclopedia_headerlabel" parent="@style/v3_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    
    <style name="v3_bmidescription_label" >>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/v3_label</item>
    </style>
    <style name="v3_report_label" parent="@style/v3_label">
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="v3_label_suggestion_rowpos">
        <item name="android:minWidth">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:gravity">right|top</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/v3_label</item>
    </style>
    <style name="v3_text_suggestion_rowpos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:gravity">left|top</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/v3_content</item>
    </style>
    
    <style name="v3_history_item_label" parent="@style/v3_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="v3_history_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:gravity">left|top</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/v3_content</item>
    </style>
    
    <style name="v3_user_profile_label" parent="@style/v3_label">
        <item name="android:layout_weight">0</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">70dp</item>
    </style>
    <style name="v3_user_profile_text">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/v3_content</item>
    </style>
    
    <style name="v3_user_profile_unit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/v3_content</item>
    </style>
</resources>
