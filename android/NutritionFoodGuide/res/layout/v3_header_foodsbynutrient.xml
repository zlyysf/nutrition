<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="44dp"
    android:orientation="horizontal"
    android:background="@color/v3_header_bg" >

    <Button
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:drawableLeft="@drawable/v3_back_arrow_navbutton"
        android:text="LeftBtn"
        android:textColor="@color/v3_navbutton_textcolor"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/v3_title_normal_font"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Title" />



    <com.makeramen.segmented.SegmentedRadioGroup
        xmlns:ca="http://schemas.android.com/apk/res/com.lingzhimobile.nutritionfoodguide"
            android:id="@+id/SegmentedRadioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dip"
            android:checkedButton="@+id/maleRadioButton"
            android:orientation="horizontal" 
            ca:segment_radio_left = "@drawable/v3_radio_left_foodsbynutrient"
            ca:segment_radio_right = "@drawable/v3_radio_right_foodsbynutrient"
            >

            <RadioButton
                android:id="@+id/rbDescription"

                android:button="@null"
                android:gravity="center"
                android:minHeight="33dip"
                android:minWidth="40dip"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/radio_colors" />

            <RadioButton
                android:id="@+id/rbFoods"

                android:button="@null"
                android:gravity="center"
                android:minHeight="33dip"
                android:minWidth="40dip"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/radio_colors" />

        </com.makeramen.segmented.SegmentedRadioGroup>
</RelativeLayout>