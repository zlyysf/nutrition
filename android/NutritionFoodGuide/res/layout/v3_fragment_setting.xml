<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleLayout"
        layout="@layout/v3_header_layout" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dip"
        android:background="@color/white"
        android:orientation="vertical" >
        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <TextView
	            style="@style/v3_table_name_text"
	            android:text="生日" >
	        </TextView>
	
	        <TextView
	            android:id="@+id/birthdayTextView"
	            style="@style/v3_table_name_text"
	            android:text="date" >
	        </TextView>
	        
	        
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <TextView
	            style="@style/v3_table_name_text"
	            android:text="身高" >
	        </TextView>
	
	        <EditText
	            android:id="@+id/heightTextView"
	            style="@style/v3_table_name_text"
	            android:text="160cm" >
	        </EditText>
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <TextView
	            style="@style/v3_table_name_text"
	            android:text="体重" >
	        </TextView>
	
	        <EditText
	            android:id="@+id/weightTextView"
	            style="@style/v3_table_name_text"
	            android:text="50kg" >
	        </EditText>
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	
	        <TextView
	            style="@style/v3_table_name_text"
	            android:text="性别" >
	        </TextView>
	
	        <com.makeramen.segmented.SegmentedRadioGroup
	            android:id="@+id/genderRadioGroup"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="5dip"
	            android:checkedButton="@+id/maleRadioButton"
	            android:orientation="horizontal" >
	
	            <RadioButton
	                android:id="@+id/maleRadioButton"
	                android:button="@null"
	                android:gravity="center"
	                android:minHeight="33dip"
	                android:minWidth="40dip"
	                android:text="男"
	                android:textAppearance="?android:attr/textAppearanceSmall"
	                android:textColor="@color/radio_colors" />
	
	            <RadioButton
	                android:id="@+id/femaleRadioButton"
	                android:button="@null"
	                android:gravity="center"
	                android:minHeight="33dip"
	                android:minWidth="40dip"
	                android:text="女"
	                android:textAppearance="?android:attr/textAppearanceSmall"
	                android:textColor="@color/radio_colors" />
	        </com.makeramen.segmented.SegmentedRadioGroup>
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	
	        <TextView
	            style="@style/v3_table_name_text"
	            android:text="活动强度" >
	        </TextView>
	
	        <com.makeramen.segmented.SegmentedRadioGroup
	            android:id="@+id/intensityRadioGroup"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="5dip"
	            android:checkedButton="@+id/intensity1RadioButton"
	            android:orientation="horizontal" >
	
	            <RadioButton
	                android:id="@+id/intensity1RadioButton"
	                android:button="@null"
	                android:gravity="center"
	                android:minHeight="33dip"
	                android:minWidth="40dip"
	                android:text="轻"
	                android:textAppearance="?android:attr/textAppearanceSmall"
	                android:textColor="@color/radio_colors" />
	
	            <RadioButton
	                android:id="@+id/intensity2RadioButton"
	                android:button="@null"
	                android:gravity="center"
	                android:minHeight="33dip"
	                android:minWidth="40dip"
	                android:text="中等"
	                android:textAppearance="?android:attr/textAppearanceSmall"
	                android:textColor="@color/radio_colors" />
	
	            <RadioButton
	                android:id="@+id/intensity3RadioButton"
	                android:button="@null"
	                android:gravity="center"
	                android:minHeight="33dip"
	                android:minWidth="40dip"
	                android:text="强"
	                android:textAppearance="?android:attr/textAppearanceSmall"
	                android:textColor="@color/radio_colors" />
	
	            <RadioButton
	                android:id="@+id/intensity4RadioButton"
	                android:button="@null"
	                android:gravity="center"
	                android:minHeight="33dip"
	                android:minWidth="40dip"
	                android:text="很强"
	                android:textAppearance="?android:attr/textAppearanceSmall"
	                android:textColor="@color/radio_colors" />
	        </com.makeramen.segmented.SegmentedRadioGroup>
	    </LinearLayout>

    </LinearLayout>
</LinearLayout>