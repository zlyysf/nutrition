<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleLayout"
        layout="@layout/v3_header_layout" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/bg_border_user_profile"
        android:orientation="vertical" >
        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <TextView
	            style="@style/v3_user_profile_label"
	            android:text="生日" >
	        </TextView>
	
	        <TextView
	            android:id="@+id/birthdayTextView"
	            android:layout_width="match_parent"
	        	android:layout_height="30dp"
	        	android:layout_gravity="center_vertical"
	        	android:gravity="center_vertical|left"
	        	android:layout_weight="1"
	            android:text="1111年1月2日" >
	        </TextView>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <ImageView
	            android:layout_width="match_parent"
	        	android:layout_height="1px"
	            android:background="@drawable/gray_horizon_line_2x"
	            >
	        </ImageView>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <TextView
	            style="@style/v3_user_profile_label"
	            android:text="身高" >
	        </TextView>
	
	        <EditText
	            android:id="@+id/heightTextView"
	            style="@style/v3_user_profile_text"
	            android:inputType="numberDecimal"
	            android:text="160" >

	        </EditText>
	        
	        <TextView
	            style="@style/v3_user_profile_unit"
	            android:text="cm" >
	        </TextView>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <ImageView
	            android:layout_width="match_parent"
	        	android:layout_height="1px"
	            android:background="@drawable/gray_horizon_line_2x"
	            >
	        </ImageView>
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <TextView
	            style="@style/v3_user_profile_label"
	            android:text="体重" >
	        </TextView>
	
	        <EditText
	            android:id="@+id/weightTextView"
	            style="@style/v3_user_profile_text"
	            android:inputType="numberDecimal"
	            android:text="50" >

	        </EditText>
	        
	        <TextView
	            style="@style/v3_user_profile_unit"
	            android:text="kg" >
	        </TextView>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <ImageView
	            android:layout_width="match_parent"
	        	android:layout_height="1px"
	            android:background="@drawable/gray_horizon_line_2x"
	            >
	        </ImageView>
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	
	        <TextView
	            style="@style/v3_user_profile_label"
	            android:text="性别" >
	        </TextView>
	
	        <com.makeramen.segmented.SegmentedRadioGroup
	            xmlns:ca="http://schemas.android.com/apk/res/com.lingzhimobile.nutritionfoodguide"
	            android:id="@+id/genderRadioGroup"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dip"
	            android:layout_weight="1"
	            android:checkedButton="@+id/maleRadioButton"
	            android:orientation="horizontal" 
	            ca:segment_radio_left = "@drawable/v3_radiotab_left_bg"
            	ca:segment_radio_middle = "@drawable/v3_radiotab_mid_bg"
            	ca:segment_radio_right = "@drawable/v3_radiotab_right_bg"
	            >
	
	            <RadioButton
	                android:id="@+id/maleRadioButton"
	                android:button="@null"
	                android:gravity="center"
	                android:minHeight="33dip"
	                android:minWidth="40dip"
	                android:layout_width="match_parent"
	                android:layout_weight="1"
	                android:text="男"
	                android:textAppearance="?android:attr/textAppearanceSmall"
	                android:textColor="@color/radio_colors" />
	
	            <RadioButton
	                android:id="@+id/femaleRadioButton"
	                android:button="@null"
	                android:gravity="center"
	                android:minHeight="33dip"
	                android:minWidth="40dip"
	                android:layout_width="match_parent"
	                android:layout_weight="1"
	                android:text="女"
	                android:textAppearance="?android:attr/textAppearanceSmall"
	                android:textColor="@color/radio_colors" />
	        </com.makeramen.segmented.SegmentedRadioGroup>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <ImageView
	            android:layout_width="match_parent"
	        	android:layout_height="1px"
	            android:background="@drawable/gray_horizon_line_2x"
	            >
	        </ImageView>
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	
	        <TextView
	            style="@style/v3_user_profile_label"
	            android:text="活动强度" >
	        </TextView>
	        
	        <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:layout_weight="1"
		        android:orientation="vertical" >
	
		        <com.makeramen.segmented.SegmentedRadioGroup
		            xmlns:ca="http://schemas.android.com/apk/res/com.lingzhimobile.nutritionfoodguide"
		            android:id="@+id/intensityRadioGroup"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="10dip"
		            android:layout_marginTop="10dip"
		            android:layout_marginBottom="10dip"
		            android:checkedButton="@+id/intensity1RadioButton"
		            android:orientation="horizontal" 
		            ca:segment_radio_left = "@drawable/v3_radiotab_left_bg"
	            	ca:segment_radio_middle = "@drawable/v3_radiotab_mid_bg"
	            	ca:segment_radio_right = "@drawable/v3_radiotab_right_bg"
		            >
		
		            <RadioButton
		                android:id="@+id/intensity1RadioButton"
		                android:button="@null"
		                android:gravity="center"
		                android:minHeight="33dip"
		                android:minWidth="40dip"
		                android:layout_width="match_parent"
		                android:layout_weight="1"
		                android:text="轻"
		                android:textAppearance="?android:attr/textAppearanceSmall"
		                android:textColor="@color/radio_colors" />
		
		            <RadioButton
		                android:id="@+id/intensity2RadioButton"
		                android:button="@null"
		                android:gravity="center"
		                android:minHeight="33dip"
		                android:minWidth="40dip"
		                android:layout_width="match_parent"
		                android:layout_weight="1"
		                android:text="中等"
		                android:textAppearance="?android:attr/textAppearanceSmall"
		                android:textColor="@color/radio_colors" />
		
		            <RadioButton
		                android:id="@+id/intensity3RadioButton"
		                android:button="@null"
		                android:gravity="center"
		                android:minHeight="33dip"
		                android:minWidth="40dip"
		                android:layout_width="match_parent"
		                android:layout_weight="1"
		                android:text="强"
		                android:textAppearance="?android:attr/textAppearanceSmall"
		                android:textColor="@color/radio_colors" />
		
		            <RadioButton
		                android:id="@+id/intensity4RadioButton"
		                android:button="@null"
		                android:gravity="center"
		                android:minHeight="33dip"
		                android:minWidth="40dip"
		                android:layout_width="match_parent"
		                android:layout_weight="1"
		                android:text="很强"
		                android:textAppearance="?android:attr/textAppearanceSmall"
		                android:textColor="@color/radio_colors" />
		        </com.makeramen.segmented.SegmentedRadioGroup>
		        
		        <TextView
		            android:id="@+id/tvActivityLevelDescription"
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:layout_margin="5dip"
		        	android:minHeight="40dp"
		            android:text="活动强度aaaaaaaaaaaaaaaaaaaaaaaaaaaaasssssssssssssss" >
	        	</TextView>
	        </LinearLayout>
	    </LinearLayout>

    </LinearLayout>
</LinearLayout>