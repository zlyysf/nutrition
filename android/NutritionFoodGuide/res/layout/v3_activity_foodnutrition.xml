<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v3_app_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleLayout"
        layout="@layout/v3_header_layout" />

    <com.lingzhimobile.nutritionfoodguide.ScrollViewDebug
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fadingEdge="none"
		>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="@drawable/bg_border_user_profile"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
				    android:layout_marginLeft="1px"
				    android:layout_marginRight="1px"
                    android:background="@color/v3_encyclopedia_headerlabel"
                    android:orientation="vertical" >

	                <TextView
	                    style="@style/v3_encyclopedia_headerlabel"
	                    android:text="选择重量" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    
                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:textSize="25sp"
                        android:textColor="@color/v3_content"
                        android:text="0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textSize="25sp"
                        android:textColor="@color/v3_content"
                        android:text="g" />

                </LinearLayout>
            </LinearLayout>


			
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="@drawable/bg_border_user_profile"
                >

			    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
				    android:layout_marginLeft="1px"
				    android:layout_marginRight="1px"
                    android:background="@color/v3_encyclopedia_headerlabel"
                    android:orientation="vertical" >

	                <TextView
	                    style="@style/v3_encyclopedia_headerlabel"
	                    android:text="营养含量" />
                </LinearLayout>
	            <com.lingzhimobile.nutritionfoodguide.ListViewExpandHeight
	                android:id="@+id/listView1"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="5dp"
	                android:divider="@null"
	                android:orientation="vertical" >
	            </com.lingzhimobile.nutritionfoodguide.ListViewExpandHeight>
			</LinearLayout>
        </LinearLayout>
    </com.lingzhimobile.nutritionfoodguide.ScrollViewDebug>

</LinearLayout>