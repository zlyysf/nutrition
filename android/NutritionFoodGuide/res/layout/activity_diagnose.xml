<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/white"
	    android:orientation="vertical" >
	
	    <include android:id="@+id/topbarPart" layout="@layout/topbar_diagnose" />
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" 
		    >
		    <ScrollView
	    	    android:id="@+id/scrollView1"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="match_parent"
	    	  	>
	    	    <LinearLayout
	    	        android:layout_width="match_parent"
	    	        android:layout_height="match_parent"
	    	        android:orientation="vertical" >
	    	        
	    	        <LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_weight="0"
					    android:orientation="vertical" >
				
						<TextView
						    android:id="@+id/tvTitleInner"
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center_vertical"
						    android:background="@drawable/section_bar_720_62"
						    android:gravity="center_vertical"
						    android:paddingLeft="10dp"
						    android:text="textview1"
						    android:textColor="@color/white"
						    android:textSize="15sp" />
					    
					</LinearLayout>
				    
				    <com.lingzhimobile.nutritionfoodguide.ListViewExpandHeight
				        android:id="@+id/listView1"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_weight="1"
				        android:divider="@null"
				        android:cacheColorHint="#00000000" >
				
				    </com.lingzhimobile.nutritionfoodguide.ListViewExpandHeight>
				    
				    <LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="100dp"
					    android:layout_weight="0"
					    android:orientation="vertical" >
					</LinearLayout>
	    	    </LinearLayout>
	    	</ScrollView>
		    
				
		</LinearLayout>
	</LinearLayout>
	
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    	<LinearLayout
    	    android:id="@+id/llDiagnoseBottomBar"
    	    android:layout_width="match_parent"
    	    android:layout_height="50dp"
    	    android:layout_alignParentBottom="true"
    	    android:layout_alignParentLeft="true"
    	    android:layout_weight="0"
    	    android:background="@drawable/bar_diagnose_button_bg_720_136"
    	    android:orientation="vertical" >
	        <Button
	            android:id="@+id/btnDiagnose"
	            android:layout_width="150dp"
	            android:layout_height="40dp"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:layout_margin="5dp"
	            android:background="@drawable/btn_topright_bg"
	            android:text="@string/title_diagnose" />
		</LinearLayout>
		<!--  
    	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="300dp"
	        android:layout_alignParentLeft="true"
	        android:layout_above = "@id/llDiagnoseBottomBar"
	        android:layout_weight="0"
	        android:background="@color/spinnerItemTimeTypeBgNormal"
	        android:orientation="vertical" >
	    </LinearLayout>
	    -->

    	
	    
    </RelativeLayout>
</FrameLayout>
	        




