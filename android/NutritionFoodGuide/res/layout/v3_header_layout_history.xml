<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleLayout"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/v3_header_bg"
    android:orientation="horizontal"
     >

    <Button
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@null"
        android:drawableLeft="@drawable/v3_prev_bg"
        android:textColor="@color/v3_navbutton_textcolor"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/v3_title_normal_font"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Title" />

    <Button
        android:id="@+id/rightButton"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:drawableRight="@drawable/v3_next_bg"
        android:textColor="@color/v3_navbutton_textcolor"
        android:textSize="17sp"
        android:background="@null"
         />

</RelativeLayout>