<com.lingzhimobile.nutritionfoodguide.LayoutSquareVariety xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:n2="http://schemas.android.com/apk/res/com.lingzhimobile.nutritionfoodguide"
    android:id="@+id/cellLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_border_user_profile"
    n2:time="1"
    n2:offset="40dp"
    >
    <FrameLayout
        android:id="@+id/flFood"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" 
	        android:orientation="vertical"
	        android:layout_margin="1px"
	        >
	        
	        <ImageView
	            android:id="@+id/imageView1"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:scaleType="fitXY"
	            android:src="@color/lightcyan" />
	
	        
	
	        <TextView
	            android:id="@+id/tvFood"
	            android:layout_width="fill_parent"
	            android:layout_height="20dp"
	            android:layout_weight="0"
				android:background="@color/black"
	            android:gravity="center_vertical|center_horizontal"
	            android:textColor="@color/white"
	            android:textSize="14sp"
	            android:text="Food" />
	        
	        <TextView
	            android:id="@+id/tvAmount"
	            android:layout_width="fill_parent"
	            android:layout_height="20dp"
	            android:layout_weight="0"
				android:background="@color/black"
	            android:gravity="center_vertical|center_horizontal"
	            android:textColor="@color/white"
	            android:textSize="14sp"
	            android:text="Amount"/>
	
	    </LinearLayout>
	    
	    <ImageView
	            android:id="@+id/imageViewBgEffect"
	            android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
	            android:src="@drawable/v3_bg_food_addclickeffect" />
	    
    </FrameLayout>
</com.lingzhimobile.nutritionfoodguide.LayoutSquareVariety>