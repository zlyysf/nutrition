<?xml version="1.0" encoding="utf-8"?>
<com.lingzhimobile.nutritionfoodguide.LayoutSquare xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cellLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="0dp" >

    <RelativeLayout
        android:id="@+id/rlOneItem"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        >
        
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@color/pink" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/tvUp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="bottom|center_horizontal"
                android:text="B12"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tvDown"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:text="维生素"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold" />

        </LinearLayout>

        

        

    </RelativeLayout>

</com.lingzhimobile.nutritionfoodguide.LayoutSquare>