	<FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >
            
	    <TextView
	        android:id="@+id/tvBackgroundCorner"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:background="@drawable/corners_search" />

	    <TextView
	        android:layout_width="80dp"
	        android:layout_height="50dp"
	        android:layout_gravity="left|center_vertical"
	        android:drawableLeft="@drawable/search_glass_2x"
	        android:paddingLeft="15dp" />
	    
	    <TextView
	        android:id="@+id/tvSearchTextClear"
	        android:layout_width="80dp"
	        android:layout_height="50dp"
	        android:layout_gravity="right|center_vertical"
	        android:drawableRight="@drawable/btn_delete_icon"
	        android:paddingRight="15dp" />

	    <EditText
	        android:id="@+id/etSearch"
	        android:layout_width="fill_parent"
	        android:layout_height="46dp"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="40dp"
	        android:layout_marginRight="40dp"
	        android:background="@null"
	        android:ems="10"
	        android:hint="@string/searchFoodHint"
	        android:imeOptions="actionDone"
	        android:paddingLeft="5dp"
	        android:singleLine="true"
	        android:textSize="17dp" >

	    </EditText>

        
    </FrameLayout>
        
    <ExpandableListView
        android:id="@+id/expandableListView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:divider="@null"
        android:cacheColorHint="#00000000" >
        
    </ExpandableListView>

</LinearLayout>


