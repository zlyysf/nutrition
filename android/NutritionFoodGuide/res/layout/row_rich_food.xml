<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" 
    >
    
    <LinearLayout 
        android:id="@+id/llRowNutrient"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:background="@drawable/row_clickable_bg"
	    android:orientation="horizontal" >
	
	    <ImageView
	        android:id="@+id/ivFood"
	        android:layout_width="75dp"
	        android:layout_height="50dp"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0"
	        />
	
	    <LinearLayout
	        android:id="@+id/llToInputFoodAmount"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:orientation="horizontal" 
	        >
	        
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:layout_weight="1"
		        android:orientation="vertical" >
		        
		        <TextView
			        android:id="@+id/tvFoodName"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="1"
			        android:gravity="center_vertical"
			        android:text="苹果"
			        android:textSize="18sp" />
			     <TextView
			         android:id="@+id/tvFoodAmount"
			         android:layout_width="fill_parent"
			         android:layout_height="fill_parent"
			         android:layout_weight="1"
			         android:text="推荐量：123g"
			         android:textSize="13sp" />
		    </LinearLayout>
		    
	
		    <ImageButton
		        android:id="@+id/imgBtnAddFood"
		        android:layout_width="50dp"
		        android:layout_height="40dp"
		        android:layout_gravity="center_vertical"
		        android:layout_weight="0"
		        android:background="@null"
		        android:gravity="center_vertical"
		        android:scaleType="centerInside"
		        android:src="@drawable/btn_add_by_nutrient" />
	

	     </LinearLayout>
     
    </LinearLayout>

</LinearLayout>