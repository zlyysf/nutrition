<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none" >
    
    <include android:id="@+id/topbarPart" layout="@layout/topbar" />
    
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
             >
            
	    <TextView
	        android:id="@+id/tvBackgroundCorner"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:background="@drawable/corners_search" />

	    <TextView
	        android:layout_width="80dp"
	        android:layout_height="50dp"
	        android:layout_gravity="left|center_vertical"
	        android:drawableLeft="@drawable/search_glass_2x"
	        android:paddingLeft="15dp" />
	    
	    <TextView
	        android:id="@+id/tvSearchTextClear"
	        android:layout_width="80dp"
	        android:layout_height="50dp"
	        android:layout_gravity="right|center_vertical"
	        android:drawableRight="@drawable/btn_delete_icon"
	        android:paddingRight="15dp" />

	    <EditText
	        android:id="@+id/etSearch"
	        android:layout_width="fill_parent"
	        android:layout_height="46dp"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="40dp"
	        android:layout_marginRight="40dp"
	        android:background="@null"
	        android:ems="10"
	        android:hint="@string/searchFoodHint"
	        android:imeOptions="actionDone"
	        android:paddingLeft="5dp"
	        android:singleLine="true"
	        android:textSize="17dp" >

	    </EditText>

        
    </FrameLayout>
    
    <GridView
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:horizontalSpacing="10dp"
        android:listSelector="@null"
        android:numColumns="3"
        android:padding="0dp"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        
        >

    </GridView>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:divider="@null"
        android:cacheColorHint="#00000000"
        android:visibility="gone" 
        >
    </ListView>

</LinearLayout>