<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleLayout"
        layout="@layout/v3_header_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_border_user_profile"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
				    android:layout_marginLeft="1px"
				    android:layout_marginRight="1px"
                    android:background="@color/v3_encyclopedia_headerlabel"
                    android:orientation="vertical" >

	                <TextView
	                    style="@style/v3_encyclopedia_headerlabel"
	                    android:text="营养" />
                </LinearLayout>
                
                <TableLayout
		            android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
<!-- 
no use of http://stackoverflow.com/questions/11538937/two-columns-layout-with-first-column-wrap-content-second-fill-parent
it seems this way ok . but only worked once.
    http://androidadvice.blogspot.com/2010/10/tablelayout-columns-equal-width.html
        Perfect! width=0 and weight=1 did the job. Also without stretchColumns="1".
 -->
                    <ImageView
				            android:layout_width="match_parent"
				        	android:layout_height="1px"
				            android:background="@drawable/gray_horizon_line_2x"
			            >
			        </ImageView>

		            <TableRow
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:padding="0dp" >


		                
		                <TextView
		                        style="@style/v3_encyclopedia_level2label"
		                        android:text="维生素" />
	                    
	                    <LinearLayout
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:layout_margin="5dp"
		                    android:orientation="vertical" >
		                    <LinearLayout
			                    android:layout_width="match_parent"
			                    android:layout_height="wrap_content"
			                    android:orientation="horizontal" >
			                    <TextView
	                                android:id="@+id/tvNutrientVitamin1"
	                                style="@style/v3_nutrient_button"
	                                android:text="A" >
	                            </TextView>
	
	                            <TextView
	                                android:id="@+id/tvNutrientVitamin2"
	                                style="@style/v3_nutrient_button"
	                                android:text="B2" >
	                            </TextView>
	
	                            <TextView
	                                android:id="@+id/tvNutrientVitamin3"
	                                style="@style/v3_nutrient_button"
	                                android:text="B6" >
	                            </TextView>
	
	                            <TextView
	                                android:id="@+id/tvNutrientVitamin4"
	                                style="@style/v3_nutrient_button"
	                                android:text="B9" >
	                            </TextView>
		                    </LinearLayout>
		                    <LinearLayout
			                    android:layout_width="match_parent"
			                    android:layout_height="wrap_content"
			                    android:orientation="horizontal" >
			                    <TextView
	                                android:id="@+id/tvNutrientVitamin5"
	                                style="@style/v3_nutrient_button"
	                                android:text="B12" >
	                            </TextView>
	
	                            <TextView
	                                android:id="@+id/tvNutrientVitamin6"
	                                style="@style/v3_nutrient_button"
	                                android:text="C" >
	                            </TextView>
	
	                            <TextView
	                                android:id="@+id/tvNutrientVitamin7"
	                                style="@style/v3_nutrient_button"
	                                android:text="D" >
	                            </TextView>
	
	                            <TextView
	                                android:id="@+id/tvNutrientVitamin8"
	                                style="@style/v3_nutrient_button"
	                                android:text="E" >
	                            </TextView>
		                    </LinearLayout>
	                    </LinearLayout>
		            </TableRow>
		            <ImageView
			            android:layout_width="match_parent"
			        	android:layout_height="1px"
			            android:background="@drawable/gray_horizon_line_2x"
			            >
			        </ImageView>
		            <TableRow
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content" >
	                    

		                <TextView
		                        style="@style/v3_encyclopedia_level2label"
		                        android:text="矿物质" />

	                    
	                    <LinearLayout
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:layout_margin="5dp"
		                    android:orientation="vertical" >
		                    <LinearLayout
			                    android:layout_width="match_parent"
			                    android:layout_height="wrap_content"
			                    android:orientation="horizontal" >
			                    <TextView
	                                android:id="@+id/tvNutrientMineral1"
	                                style="@style/v3_nutrient_button"
	                                android:text="铁" >
	                            </TextView>
	
	                            <TextView
	                                android:id="@+id/tvNutrientMineral2"
	                                style="@style/v3_nutrient_button"
	                                android:text="钙" >
	                            </TextView>
	
	                            <TextView
	                                android:id="@+id/tvNutrientMineral3"
	                                style="@style/v3_nutrient_button"
	                                android:text="镁" >
	                            </TextView>
	
	                            <TextView
	                                style="@style/v3_nutrient_button"
	                                android:text="ph"
	                                android:visibility="invisible" >
	                            </TextView>
		                    </LinearLayout>
		                    <LinearLayout
			                    android:layout_width="match_parent"
			                    android:layout_height="wrap_content"
			                    android:orientation="horizontal" >
			                    <TextView
	                                android:id="@+id/tvNutrientMineral4"
	                                style="@style/v3_nutrient_button"
	                                android:text="钾" >
	                            </TextView>
	
	                            <TextView
	                                android:id="@+id/tvNutrientMineral5"
	                                style="@style/v3_nutrient_button"
	                                android:text="锌" >
	                            </TextView>
	
	                            <TextView
	                                style="@style/v3_nutrient_button"
	                                android:text="ph"
	                                android:visibility="invisible" >
	                            </TextView>
	
	                            <TextView
	                                style="@style/v3_nutrient_button"
	                                android:text="ph"
	                                android:visibility="invisible" >
	                            </TextView>
		                    </LinearLayout>
	                    </LinearLayout>
		            </TableRow>
		            <ImageView
			            android:layout_width="match_parent"
			        	android:layout_height="1px"
			            android:background="@drawable/gray_horizon_line_2x"
			            >
			        </ImageView>
		            <TableRow
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content" >
	                    
		                <TextView
		                        style="@style/v3_encyclopedia_level2label"
		                        android:text=""
		                        android:visibility="invisible" />
	                    
	                    
	                    <LinearLayout
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:layout_margin="5dp"
		                    android:orientation="vertical" >
		                    <LinearLayout
			                    android:layout_width="match_parent"
			                    android:layout_height="wrap_content"
			                    android:orientation="horizontal" >
			                    <TextView
	                                android:id="@+id/tvNutrientMacro1"
	                                style="@style/v3_nutrient_button"
	                                android:text="蛋白质" >
	                            </TextView>
	
	                            <TextView
	                                android:id="@+id/tvNutrientMacro2"
	                                style="@style/v3_nutrient_button"
	                                android:text="纤维" >
	                            </TextView>
		                    </LinearLayout>
	                    </LinearLayout>
		            </TableRow>
		        </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_border_user_profile"
                android:orientation="vertical" >

                <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="1px"
				    android:layout_marginLeft="1px"
				    android:layout_marginRight="1px"
	                android:background="@color/v3_encyclopedia_headerlabel"
	                android:orientation="vertical" >
	                <TextView
	                    style="@style/v3_encyclopedia_headerlabel"
	                    android:text="食物" />
                </LinearLayout>
                <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal" >
			        <ImageView
			            android:layout_width="match_parent"
			        	android:layout_height="1px"
			            android:background="@drawable/gray_horizon_line_2x"
			            >
			        </ImageView>
			    </LinearLayout>

                <com.lingzhimobile.nutritionfoodguide.GridViewExpandHeight
                    android:id="@+id/gvFoodType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fadingEdge="none"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@null"
                    android:numColumns="3"
                    android:padding="0dp"
                    android:scrollbars="none"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_border_user_profile"
                android:orientation="vertical" >

                <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
				    android:layout_marginTop="1px"
				    android:layout_marginLeft="1px"
				    android:layout_marginRight="1px"
	                android:background="@color/v3_encyclopedia_headerlabel"
	                android:orientation="vertical" >
	                <TextView
	                    style="@style/v3_encyclopedia_headerlabel"
	                    android:text="常见疾病" />
                </LinearLayout>
                
                <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal" >
			        <ImageView
			            android:layout_width="match_parent"
			        	android:layout_height="1px"
			            android:background="@drawable/gray_horizon_line_2x"
			            >
			        </ImageView>
			    </LinearLayout>

                <com.lingzhimobile.nutritionfoodguide.ListViewExpandHeight
                    android:id="@+id/lvIllness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"

                    android:listSelector="@android:color/transparent" >

<!-- http://gushedaoren.blog.163.com/blog/static/1736634052012117112723843/   ok
  
  
  http://hi.baidu.com/kabike/item/29ec421e66ea714be75e0693  ok
  android:listSelector="@android:color/transparent" 
-->
                </com.lingzhimobile.nutritionfoodguide.ListViewExpandHeight>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>