    <LinearLayout
        android:id="@+id/llSymptomAndType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <!-- to contain v3_part_symptomandtype_inhistory -->

        
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow>

            <TextView
                style="@style/v3_table_name_text"
                android:text="体温" />

            <TextView
                android:id="@+id/temperatureTextView"
                style="@style/v3_table_name_text"
                android:text="37.3C" />

            <TextView
                style="@style/v3_table_name_text"
                android:text="体重" />

            <TextView
                android:id="@+id/weightTextView"
                style="@style/v3_table_name_text"
                android:text="76kg" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/v3_table_name_text"
                android:text="血压" />

            <TextView
                android:id="@+id/bloodPressureTextView"
                style="@style/v3_table_name_text"
                android:text="110/80" />

            <TextView
                style="@style/v3_table_name_text"
                android:text="心跳" />

            <TextView
                android:id="@+id/heartRateTextView"
                style="@style/v3_table_name_text"
                android:text="65bpm" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/v3_table_name_text"
            android:text="笔记" />

        <TextView
            android:id="@+id/noteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灰尘太大" />
    </LinearLayout>

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>