<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

	<include android:id="@+id/topbarPart" layout="@layout/topbar" />

	
	
	<ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@null" 
        android:cacheColorHint="#00000000">

    </ListView>
    
	<LinearLayout
	    android:id="@+id/llWhenEmptyList"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"
	    android:orientation="vertical" >

	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginBottom="20dp"
	        android:layout_marginTop="50dp"
	        android:src="@drawable/foodcombinationlist_empty_icon" />

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="18dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="10dp"
	        android:text="@string/noFoodCombinationListForNow"
	        android:textColor="@color/userInfoNormalFontColor"
	        android:textSize="15sp" />

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="30dp"
	        android:layout_marginRight="30dp"
	        android:layout_marginTop="15dp"
	        android:text="@string/suggestToMakeFoodCombination"
	        android:textColor="@color/userInfoNormalFontColor"
	        android:textSize="15sp" />
	    
	</LinearLayout>

	

</LinearLayout>
