<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v3_app_bg"
    android:orientation="vertical"
    >


    <include
        android:id="@+id/titleLayout"
        layout="@layout/v3_header_foodsbynutrient" />
    
    <LinearLayout
	    android:id="@+id/llFoods"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_margin="10dip"
	    android:orientation="vertical" 
	    android:background="@drawable/bg_border_user_profile"
	    >

	    <com.lingzhimobile.nutritionfoodguide.ScrollViewDebug
	        android:id="@+id/scrollView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:scrollbars="none" >

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
	            
	            <TextView
	                android:id="@+id/tvNutrientFoods"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="1px"
	                android:layout_marginRight="1px"
	                android:layout_marginTop="1px"
	                android:background="#f3dcb7"
	                android:gravity="center_vertical"
	                android:minHeight="30dp"
	                android:paddingLeft="10dp"
	                android:text="textview1"
	                android:textColor="@color/v3_content" />
	
	            <GridView
	                    android:id="@+id/gridView1"
	                    android:layout_width="match_parent"
	                    android:layout_height="10000dp"
	                    android:layout_margin="10dp"
	                    android:layout_weight="1"
	                    android:fadingEdge="none"
	                    android:horizontalSpacing="10dp"
	                    android:listSelector="@null"
	                    android:numColumns="3"
	                    android:padding="0dp"
	                    android:scrollbars="none"
	                    android:stretchMode="columnWidth"
	                    android:verticalSpacing="10dp" />
	
	        </LinearLayout>
	    </com.lingzhimobile.nutritionfoodguide.ScrollViewDebug>
	    
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/llNutrientDescription"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:visibility="gone" 
	    >
	    
	    <WebView
	        android:id="@+id/webView1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" />
	    
	</LinearLayout>

</LinearLayout>