<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v3_app_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleLayout"
        layout="@layout/v3_header_foodsbynutrient" />
    
    <LinearLayout
	    android:id="@+id/llFoods"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    >
	    <ScrollView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
	            
	            <TextView
				    android:id="@+id/tvNutrientFoods"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:text="textview1"
				    android:textColor="@color/black" />
	
	            <com.lingzhimobile.nutritionfoodguide.GridViewExpandHeight
	                    android:id="@+id/gridView1"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_margin="10dp"
	                    android:layout_weight="1"
	                    android:fadingEdge="none"
	                    android:horizontalSpacing="10dp"
	                    android:listSelector="@null"
	                    android:numColumns="3"
	                    android:padding="0dp"
	                    android:scrollbars="none"
	                    android:stretchMode="columnWidth"
	                    android:verticalSpacing="10dp" />
	
	        </LinearLayout>
	    </ScrollView>
	    
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/llNutrientDescription"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:visibility="gone" 
	    >
	    
	    <WebView
	        android:id="@+id/webView1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" />
	    
	</LinearLayout>

</LinearLayout>